// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Address {
  street  String
  number  Int
  city    String
  zipCode String
}

type ProductType {
  id          String
  name        String
  description String
  quantity    Int
  price       Int
  stock       Int
  rate        Int
  category    String
}

type CartsType {
  id        String
  createdAt DateTime
  updatedAt DateTime
  user      UserType
  products  ProductType[]
}

type UserType {
  name        String
  lastName    String
  username    String
  phoneNumber Int
  address     Address
  id          String
}

model users {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  name        String
  lastName    String
  username    String      @unique
  hash        String
  phoneNumber Int
  address     Address
  Carts       CartsType[]
}

model products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  stock       Int
  price       Int
  rate        Int
  category    String
}

model carts {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      UserType
  products  ProductType[]
}

model messages {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    UserType
  message   String
}

model sales {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  cart              CartsType
  user              UserType
  totalWithoutTaxes Int
  totalWithTaxes    Int
}
