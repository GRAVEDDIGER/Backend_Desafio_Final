// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Address {
  street  String
  number  Int
  city    String
  zipCode String
}

model Users {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  name        String
  lastName    String
  username    String     @unique
  hash        String
  phoneNumber Int
  address     Address
  messages    messages[]
  Carts       Carts[]
}

model Products {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  stock       Int
  price       Int
  rate        Int
  Carts       Carts?   @relation(fields: [cartsId], references: [id])
  cartsId     String?  @db.ObjectId
}

model Carts {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      Users      @relation(fields: [usersId], references: [id])
  usersId   String     @db.ObjectId
  products  Products[]
}

model messages {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  usersId   String   @db.ObjectId
  author    Users    @relation(fields: [usersId], references: [id])
  message   String
}
