<form  action="#"   class="mi-formulario" id="{{id}}">
  <h2>Agregar Producto</h2>
  <div class="form-group">
    <label for="name">Nombre:{{name}}</label>
    <input type="text" id="name" name="name"  required value="{{{name}}}">
  </div>
  <div class="form-group">
    <label for="price">Precio:</label>
    <input type="number" id="price" name="price" step="0.5" value={{price}} required>
  </div>
  <div class="form-group">
    <label for="rate">Rate:</label>
    <input type="number" id="rate" name="rate" min="0" max="5" step="0.1" value="{{rate}}" required>
  </div>
    <div class="form-group">
    <label for="stock">Stock:</label>
    <input type="number" step="1" id="stock" name="stock" required value={{stock}}>
  </div>
      <div class="form-group">
    <label for="category">Categoria:</label>
    <input type="text" id="category" name="category" required value="{{category}}">
  </div>
  <div class="form-group">
    <label for="description">Descripci√≥n:</label>
    <input id="description" name="description" required value="{{description}}">
  </div>

  <button type="submit">Guardar</button>
</form>
